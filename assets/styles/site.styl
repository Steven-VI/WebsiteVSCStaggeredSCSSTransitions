$color_1 = inherit
.list
  list-style: none
  margin: 0
  padding: 0
  display: flex
  li
    flex: 1
    a
      text-decoration: none
      color: $color_1
      padding-top: 1rem
      display: block
      text-align: center
      overflow: hidden
      font-size: 40px
      span
        display: block
        background: rgba(0, 0, 0, 0.1)
        padding: 0.5rem
        font-size: 22px
        margin-top: 1rem
    &:nth-child(1)
      background: #90CAF9
    &:nth-child(2)
      background: #80DEEA
    &:nth-child(3)
      background: #A5D6A7
    &:nth-child(4)
      background: #E6EE9C
    &:nth-child(5)
      background: #FFF176
    &:nth-child(6)
      background: #FFD54F
        
@media (hover: hover)
  .list
    li
      a
        span
          transform: translateY(100px)
          transition: 0.2s
    &:hover
      span
        transform: translateY(0)
        transition-delay: var(--delay)

for $i in (0)..(20)
  .list li:nth-child({$i + 1}) span
    transition-delay: (0.05s * $i)